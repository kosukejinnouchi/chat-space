.chat-side
  .side-header
    .left-header
      %p.left-header__username 
        = current_user.name
      %ul.left-header__icon-list
        %li.left-header__icon
          = link_to new_group_path(current_user) do
            = icon('far', 'edit', class: 'icon')
        %li.left-header__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name 
            = group.name
          .group-message 
            = group.show_last_message
